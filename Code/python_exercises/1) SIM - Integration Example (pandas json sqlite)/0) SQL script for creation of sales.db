# sales.db script for SQLite3

-- First create a database with the following command
-- .open .\sales.db

CREATE TABLE customer (
	custId INTEGER PRIMARY KEY, 
	custFirst_name TEXT NOT NULL,
	custLast_name TEXT NOT NULL,
	custEmail TEXT NOT NULL,
	custPhone TEXT
);

CREATE TABLE account (
    accNumber TEXT PRIMARY KEY,
	accBalance REAL NOT NULL,
	accHolderId INTEGER -- points to custId
);

